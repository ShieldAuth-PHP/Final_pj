{
  "manifest_version": 3,
  "name": "Vaccine for Trojan Malware",
  "version": "1.0",
  "description": "다운로드한 파일을 YARA 룰로 검사하는 Chrome 확장 프로그램",
  "permissions": [
    "downloads",
    "notifications",
    "scripting",
    "declarativeNetRequest",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/alert.png",
      "128": "icons/vaccine.png"
    }
  },
  "icons": {
    "48": "icons/vaccine.png",
    "128": "icons/alert.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "malware_blocker",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
